doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        //link(rel="stylesheet", href="https://unpkg.com/mvp.css")
        link(rel="preconnect" href="https://fonts.googleapis.com")
        link(rel="preconnect" href="https://fonts.gstatic.com" crossorigin)
        link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet")
        link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Poppins:200,300,400,500,600,700,800,900&display=swap")
        link(rel="stylesheet", href="public/css/style.css")
    body 
        header
             
        main
            div#call
                div#myStream
                    video#myFace(autoplay, playsinline, width="400", height="400")
                    button#mute(class="w-btn") Mute
                    button#camera(class="w-btn") Turn Camera Off
                    div(class="selectBox")
                        select#cameras(class="select")
                        video#peerFace(autoplay, playsinline, width="400", height="400")
            div#welcome(class="welcome")
                h1 Noom
                form#name
                    input(placeholder="nickname", required, type="text")
                    button(class="w-btn w-btn-gra1 w-btn-gra-adim") Save
                form#roomname
                    input(placeholder="room name", required, type="text")
                    button(class="w-btn w-btn-gra2 w-btn-gra-anim") Enter Room 
                h4 Open Rooms
                div#rooms
            div#room
                h3
                ul
                form#msg
                    input(placeholder="message", required, type="text")
                    button(class="w-btn") Send
            div#chat
                ul  
                form#msg
                    input(placeholder="chat", required, type="text")
                    button(class="w-btn") Send
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js") 